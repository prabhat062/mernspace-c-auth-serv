{
    "name": "auth-service",
    "version": "1.0.0",
    "description": "The user management service",
    "main": "index.js",
    "scripts": {
        "dev": "cross-env NODE_ENV=dev nodemon src/server.ts",
        "build":"tsc",
        "format:fix": "prettier . --write",
        "format:check": "prettier . --check",
        "lint:check": "eslint .",
        "lint:fix": "eslint . --fix",
        "test": "cross-env DOTENV_CONFIG_DEBUG=false jest --runInBand",
        "prepare": "husky",
        "start": "ts-node src/index.ts",
        "migration:generate": "typeorm-ts-node-commonjs migration:generate src/migration/%npm_config_name% -d src/config/data-source.ts",
        "migration:run": "typeorm-ts-node-commonjs migration:run -d src/config/data-source.ts",
        "migration:create": "typeorm-ts-node-commonjs migration:create src/migration/%npm_config_name%",
        "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/config/data-source.ts",
        "migration:show": "typeorm-ts-node-commonjs migration:show -d src/config/data-source.ts"
    },
    "author": "Prabhat <Prabhat1284@gmail.com>",
    "license": "ISC",
    "devDependencies": {
        "@eslint/js": "^9.34.0",
        "@types/bcrypt": "^6.0.0",
        "@types/cookie-parser": "^1.4.10",
        "@types/express": "^5.0.3",
        "@types/http-errors": "^2.0.5",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^24.3.0",
        "@types/supertest": "^6.0.3",
        "@types/winston": "^2.4.4",
        "cross-env": "^10.0.0",
        "eslint": "^9.34.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^16.1.6",
        "mock-jwks": "^1.0.10",
        "nodemon": "^3.1.10",
        "prettier": "3.6.2",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.41.0"
    },
    "lint-staged": {
        "*.ts": [
            "npm run format:fix",
            "npm run lint:fix"
        ]
    },
    "dependencies": {
        "bcrypt": "^6.0.0",
        "cookie-parser": "^1.4.7",
        "dotenv": "^17.2.1",
        "express": "^5.1.0",
        "express-jwt": "^8.5.1",
        "express-validator": "^7.2.1",
        "http-errors": "^2.0.0",
        "jsonwebtoken": "^9.0.2",
        "jwks-rsa": "^3.2.0",
        "pg": "^8.14.1",
        "reflect-metadata": "^0.2.2",
        "rsa-pem-to-jwk": "^1.1.3",
        "typeorm": "0.3.26",
        "winston": "^3.17.0"
    }
}
